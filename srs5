//Write a C program to find sum of series of the following series for n number of
terms. 1+x+x^2+…….+x^n

#include<stdio.h>
#include<math.h>
int main()
{
int n,x,i,sum=0,sm;
printf("Enter range: ");
scanf("%d",&n);
printf("Enter the value of x: ");
scanf("%d",&x);
for(i=1;i<=n;i++){
        sm= pow(x,i);
        sum+=sm;
}
printf("The sum of the series is: %d",(sum+1));
return 0;
}
