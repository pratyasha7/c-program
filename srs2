//Print sum of the series 1/(1)^2+1/(2)^2+1/(3)^2+.......+1/(n)^2. Showing the sum upto 3 digits after point.
#include<stdio.h>
int main()
{
int n,i=1;
float conv,sm=0;
printf("Enter range: ");
scanf("%d",&n);
while(i<=n)
{
conv= (float)1/(i*i);
sm+=conv;
i++;
}
printf("Sum of the series is: %.3f",sm);
return 0;
}
