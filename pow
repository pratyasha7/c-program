//Write a program to calculate x^n where x and n are specified by the user.
#include<stdio.h>
#include<math.h>
int main()
{
int x,n,i=1,pwr;
printf("Enter the number: ");
scanf("%d",&x);
printf("Till which power to calculate: ");
scanf("%d",&n);
while(i<=n)
{
pwr= pow(x,i);
i++;
}
printf("\n Pow(%d,%d)= %d",x,n,pwr);
return 0;
}
