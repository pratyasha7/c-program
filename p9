/*  ABCDE
    ABCD
    ABC
    AB
    A
    printing this kind of pattern for n no of rows. n to be specified by the user. */


#include<stdio.h>
int main()
{
int n,i;
printf("Enter number of rows: ");
scanf("%d",&n);
while(n>0)
{
printf("\n");
char ch='A';
i=1;
while((int)ch>=65 && i<=n)
{
printf("%c",ch);
i++;
ch++;
}
n--;
}
return 0;
}

//OR
//Another logic

#include<stdio.h>
int main()
{
char ch;
int i=1,j,n;
printf("Enter number of rows: ");
scanf("%d",&n);
int no=n;
while(i<=n){
printf("\n");
j=1;
ch='A';
while(j<=no){
printf("%c",ch);
j++;
ch++;
}
no--;
i++;
}
return 0;
}
