/*  ABCDE
    ABCD
    ABC
    AB
    A
    printing this kind of pattern for n no of rows. n to be specified by the user. */


#include<stdio.h>
int main()
{
int n,i;
printf("Enter number of rows: ");
scanf("%d",&n);
while(n>0)
{
printf("\n");
char ch='A';
i=1;
while((int)ch>=65 && i<=n)
{
printf("%c",ch);
i++;
ch++;
}
n--;
}
return 0;
}
