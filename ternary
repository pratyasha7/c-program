//Finding max no between 5 no.s using ternary operator
#include<stdio.h>
int main()
{
int a,b,c,d,e,max;
printf("Enter 5 no.s a,b,c,d and e respectively: ");
scanf("%d%d%d%d%d",&a,&b,&c,&d,&e);
max= ((a>b)&&(a>c)&&(a>d)&&(a>e))?a:((b>a)&&(b>c)&&(b>d)&&(b>e))? b:((c>a)&&(c>b)&&(c>d)&&(c>e))? c:((d>a)&&(d>b)&&(d>c)&&(d>e))? d:e;
printf("The largest number is: %d",max);
return 0;
}
